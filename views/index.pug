.modal#create-proposal-modal
  .modal-dialog.modal-lg
    .modal-content.proposal-modal.create-proposal-modal
      .modal-header
        h5.modal-title Create New Proposal
        button.close.close-new-proposal(type="button" data-dismiss="modal" aria-label="Close")
          span(aria-hidden="true") &times;
      .modal-body
        form#create-proposal-form
          .form-section
            .form-element
              label(for="proposal-type") Proposal Type
              select#proposal-type.form-control(required)
                option(value="") Select a proposal type
                option(value="company") Company
                option(value="investment") Investment
                option(value="learning-opportunity") Learning Opportunity
                option(value="software") Software
                option(value="invention") Invention
                // Add more options as needed
          .form-section
            .form-element
              label(for="proposal-title") Title
              input#proposal-title.form-control(type="text" placeholder="Enter proposal title" required)
            .form-element
              label(for="proposal-description") Description
              textarea#proposal-description.form-control(rows="3" placeholder="Enter proposal description" required)
          .form-section
            .form-element
              label(for="proposal-audience") Target Audience
              input#proposal-audience.form-control(type="text" placeholder="Enter target audience")
            .form-element
              label(for="proposal-status") Current Status
              select#proposal-status.form-control(required)
                option(value="") Select current status
                option(value="idea") Idea
                option(value="in-progress") In Progress
                option(value="completed") Completed
          .form-section
            .form-element
              label(for="proposal-kpi") Key Performance Indicators (KPIs)
              textarea#proposal-kpi.form-control(rows="3" placeholder="Enter KPIs to measure success")
            .form-element
              label(for="proposal-risks") Risks and Challenges
              textarea#proposal-risks.form-control(rows="3" placeholder="Enter risks and challenges")
          .form-section
            .form-element
              label(for="proposal-dependencies") Dependencies
              textarea#proposal-dependencies.form-control(rows="3" placeholder="Enter dependencies")
            .form-element
              label(for="proposal-ownership") Ownership and Governance Structure
              textarea#proposal-ownership.form-control(rows="3" placeholder="Enter ownership and governance structure")
          .form-section
            .form-element
              label(for="proposal-ip") Intellectual Property Rights and Licensing
              textarea#proposal-ip.form-control(rows="3" placeholder="Enter intellectual property rights and licensing information")
            .form-element
              label(for="proposal-nda") Confidentiality or Non-Disclosure Agreement Requirements
              textarea#proposal-nda.form-control(rows="3" placeholder="Enter confidentiality or non-disclosure agreement requirements")
          .form-section
            .form-element
              label(for="proposal-social-impact") Social Impact
              textarea#proposal-social-impact.form-control(rows="3" placeholder="Enter social impact or environmental considerations")
            .form-element
              label(for="proposal-diversity") Diversity and Inclusion Policies
              textarea#proposal-diversity.form-control(rows="3" placeholder="Enter diversity and inclusion policies")
          .form-section
            .form-element
              label(for="proposal-attachments") Attachments
              input#proposal-attachments.form-control(type="file" multiple)
            .form-element
              label(for="proposal-link") Link 
              input#proposal-link.form-control(type="url" placeholder="Enter a link to more information")
          .form-section
            .form-element
              label(for="proposal-budget") Budget (ETH)
                input#proposal-budget.form-control(type="number" min="0" step="0.01" placeholder="Enter budget in ETH")
        .modal-footer
          button.btn.btn-submit(type="button" onclick="submitProposal()") Submit Proposal
          button.btn.btn-cancel(type="button" data-dismiss="modal") Cancel
