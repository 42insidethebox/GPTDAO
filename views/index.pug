div#reports-modal.reports-modal(style="background-image: url('/images/33.png');")
  div.modal-content
    span.close-modal-btn &times;
    h1 Financial Report of the DAO
    .financial-header-section
      select#report-month
      if isAdmin
        button.add-report-btn Add Report
    if isAdmin
      .form-report-modal
        form(id="add-report-form" action="/api/v1/reports" method="POST")
          input(type="text" name="month" placeholder="Month")
          input(type="number" name="revenue[tokenSales][numberOfTokensSold]" placeholder="Number of Tokens Sold")
          input(type="number" name="revenue[tokenSales][pricePerToken]" placeholder="Price per Token")
          input(type="number" name="revenue[totalRevenue]" placeholder="Total Revenue")
          input(type="number" name="expenses[cost]" placeholder="Cost")
          input(type="number" name="expenses[totalExpenses]" placeholder="Total Expenses")
          input(type="number" name="profitLoss" placeholder="Profit or Loss")
          button(type="submit") Confirm

    div.report-section
      h2 Revenue
      div.report-subsection
        h3 Token Sales
        p.sale-details(id="tokens-sold")
        p.sale-details(id="token-price")
      div.report-total
        h3(id="total-expenses")
    div.report-section
      h2 Profit/Loss
      div.report-total
        h3(id="total-revenue")
        h3(id="total-expenses")
        h3(id="total-profit-loss")
    div.button-section
      button.ok-button Ok


