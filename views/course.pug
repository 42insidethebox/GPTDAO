doctype html
html 
  head
    block head 
      meta(charset='UTF-8')
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
      title Natours | #{title}
      style
        include ./css/style.css
        include ./css/course.css
        include ./css/footer.css
      link(rel='stylesheet' href='/css/footer.css')
      link(rel='stylesheet' href='/css/style.css')
      link(rel='stylesheet' href='/css/course.css')
      link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css')  
      link(rel='shortcut icon' type='image/png' href='img/favicon.png')
      link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
      link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css')
      script(src='/../../script.js')

  body(data-alert=`${alert ? alert : ''}`)

    include _header

      //CONTENT
    block content
      h1 GPTDao
      section#about.about
      .container.my-5
        .row
          .col-md-8
            h1.text-center Introduction to Artificial Intelligence
            img.course-img-top(src='https://picsum.photos/600/400' alt='...')
            .course-content.my-3
              h2 Course Syllabus
              ul.list-group
                li.list-group-item
                  span.checkmark ✓
                  |  Course Introduction
                li.list-group-item
                  span.checkmark ✓
                  |  AI Fundamentals
                li.list-group-item
                  span.checkmark
                  |  Neural Networks
                li.list-group-item
                  span.checkmark
                  |  Deep Learning
                li.list-group-item
                  span.checkmark
                  |  Applications of AI
              h2 Course Resources
              ul.list-group
                li.list-group-item
                  a(href='resource.pdf' download) Downloadable Course Material
                li.list-group-item
                  a(href='external-resources.html') External Resources and Further Reading
          .col-md-4
            h2 Progress
            .progress
              .progress-bar(role='progressbar' style='width: 25%;' aria-valuenow='25' aria-valuemin='0' aria-valuemax='100')
            p 25% Complete
            h2 Course Information
            .course-info.card.my-4.w-100
              .card-body
                h5.card-title Duration
                p.card-text 12 hours
                h5.card-title Level
                p.card-text Beginner
                h5.card-title Language
                p.card-text English
                h5.card-title Instructor
                p.card-text John Smith
                h5.card-title Target Audience
                p.card-text Students
                h5.card-title Tags
                p.card-text
                  span.badge.badge-pill.badge-primary.ml-1.ml-1 Programming
                  span.badge.badge-pill.badge-primary.ml-1.ml-1 Machine Learning
                h5.card-title Social Media
                .d-flex.justify-content-between.align-items-center
                  .btn-group
                    button.btn.btn-sm.btn-outline-secondary(type='button')
                      i.fa.fa-thumbs-up
                      |  Like
                    button.btn.btn-sm.btn-outline-secondary(type='button')
                      i.fa.fa-comment
                      |  Comment
            h2 Course Reviews
            h2 Related Courses
            .related-courses
              ul.list-group
                a.list-group-item.list-group-item-action(href='#') Machine Learning for Beginners
                a.list-group-item.list-group-item-action(href='#') Data Science Fundamentals

    include _footer
    script(crossorigin="anonymous" src='https://js.stripe.com/v3/')